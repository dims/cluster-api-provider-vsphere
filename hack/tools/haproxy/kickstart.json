{
  "hostname": "localhost",
  "password": {
    "crypted": false,
    "text": "photon"
  },
  "disk": "/dev/sda",
  "packages": [
    "initramfs",
    "linux",
    "minimal"
  ],
  "additional_packages": [
    "bash",
    "ca-certificates",
    "curl",
    "gzip",
    "haproxy",
    "haveged",
    "jq",
    "lsof",
    "lvm2",
    "ntp",
    "openssh-server",
    "open-vm-tools",
    "psmisc",
    "sed",
    "shadow",
    "sudo",
    "tar",
    "vim"
  ],
  "postinstall": [
    "#!/bin/bash",
    "tdnf install -y bash ca-certificates curl gzip haproxy jq lsof lvm2 ntp openssh-server open-vm-tools psmisc sed shadow sudo tar vim",
    "useradd --create-home --home-dir=/home/photon --groups=wheel --user-group photon",
    "echo 'photon:photon' | chpasswd",
    "echo 'photon ALL=(ALL) NOPASSWD: ALL' >/etc/sudoers.d/photon",
    "chmod 440 /etc/sudoers.d/photon",
    "useradd --system --no-create-home --home-dir=/var/lib/haproxy --user-group haproxy",
    "mkdir -p /var/lib/haproxy",
    "chown -R haproxy:haproxy /var/lib/haproxy",
    "systemctl disable docker.service",
    "systemctl mask docker.service",
    "systemctl enable sshd.service",
    "systemctl enable haproxy.service",
    "tdnf clean all"
  ]
}
